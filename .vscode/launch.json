    "version": "0.2.0",
    "configurations": [
        {
            "name": "Debug Local File",
            "type": "Ruby",
            "request": "launch",
            "program": "${workspaceRoot}/Carpaccio.rb"
        },

        {
            "name": "Debug Local File using rdebug-ide",
            "type": "Ruby",
            "request": "attach",
            "cwd": "${workspaceRoot}",
            "remoteWorkspaceRoot": "${workspaceRoot}",
			"remoteHost": "0.0.0.0",
			"remotePort": "1234"
        },
        {
            "name": "Listen for rdebug-ide",
            "type": "Ruby",
            "request": "attach","localSocketPath": "",
            "showDebuggerOutput": true,
            "remoteHost": "127.0.0.1",
            "remotePort": "1234",
            "remoteWorkspaceRoot": "/CSD/projects",
            "cwd": "${workspaceRoot}"
        }
    ]
}